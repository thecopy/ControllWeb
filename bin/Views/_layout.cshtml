@using SquishIt.Framework
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Controll</title>
    @{
        WriteLiteral(Bundle.Css().ForceDebug()
            .AddDirectory("~/Content/css/")
            .Render("~/Content/Controll_#.css"));

        WriteLiteral(Bundle.JavaScript().ForceDebug()
            .AddDirectory("~/Content/js/", false)
            .Add("~/Content/js/run_prettify.js")
            .Render("~/Content/Controll_#.js"));
    }

</head>
    <body>
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="brand" href="#">Controll</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active"><a href="@Url.Content("~/")">About</a></li>
                            <li><a href="@Url.Content("~/Documentation/#")">Quick Start</a></li>
                            <li><a href="@Url.Content("~/Documentation/")">Documentation</a></li>
                            <li><a href="@Url.Content("~/Downloads/")">Downloads</a></li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
            </div>
        </div>
        <div class="container">
            @RenderBody()
        </div>
    </body>
</html>