    <div class="container" role="application">
        <header class="header">
            <h1>Controll</h1>
            <ul class="nav nav-tabs" data-bind="foreach: zombies">
                <li><a data-toggle="tab" data-bind="text: name, attr: { href: '#zombie-' + name }"></a></li>
            </ul>
        </header>
        <div class="tab-content" data-bind="foreach: zombies">
            <div class="tab-pane" data-bind="attr: { id: 'zombie-' + name }">
                <div class="row no-space">
                    <div class="span6 zombie-logs">
                        <h2 data-bind="text: name"></h2>
                    </div>
                    <div class="span3" id="command-invocation">
                        INVOKE
                    </div>
                    <div class="span3 activities">
                        <ul data-bind="foreach: activities">
                            <li class="activity">
                                <p>
                                    <i class="icon-cogs"></i>
                                    <a class="activity-name"
                                        onclick="window.controll.ui.toggleCommands(this)"
                                        data-bind="text: Name"></a>
                                </p>
                                <ul style="display: none" class="activity-commands"
                                    data-bind="foreach: Commands">
                                    <li class="activity-command">
                                        <p>
                                            <i class="icon-cog"></i>
                                            <a data-bind="text: Label"
                                                onclick="window.controll.ui.toggleInvocation(this)"></a>
                                        </p>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>

