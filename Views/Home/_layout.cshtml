@using SquishIt.Framework
<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Controll</title>
    @{
        WriteLiteral(Bundle.Css().ForceDebug()
            .AddDirectory("~/Content/css/")
            .Render("~/Content/Controll_#.css"));
            
        WriteLiteral(Bundle.JavaScript().ForceDebug()
            .Add("~/Content/js/SignalR/jquery-1.6.4.min.js")
            .Add("~/Content/js/SignalR/jquery.signalR-1.0.1.min.js")
            .Add("~/signalr/hubs")
            .Render("~Content/Controll_#.js"));
    }

</head>
<body>
    <div class="container">
        <div id="login">
            <div class="login-header">
                <div class="banner" role="banner">
                    <h1>Controll</h1>
                    <div class="jabbrLogo large-logo" id="logo"></div>
                    <div>
                        Powered by <a href="https://github.com/SignalR/SignalR" target="_blank">SignalR</a>
                    </div>
                </div>
            </div>
            <div class="login-body">
                @RenderBody()
            </div>
        </div>
    </div>
</body>
</html>